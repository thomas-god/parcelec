{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "noImplicitAny": false, // true when refactor is done,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./e2e/**/*"
  ],
  "types": [
    "./src/app/types/*"
  ]
}